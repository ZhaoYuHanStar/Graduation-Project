<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/welcome"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/symbol"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/phonenum" />

            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:theme="@style/MyEditText1"
                android:selectAllOnFocus="true"
                android:hint="手机号" />
            <TextView
                android:id="@+id/et_sendPhoneCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickPhone"
                android:padding="10dp"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/code" />

            <EditText
                android:id="@+id/et_phonecode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:theme="@style/MyEditText1"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:selectAllOnFocus="true"
                android:hint="验证码" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_loginByPhone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="进入玩易"
            android:textColor="#fff"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>